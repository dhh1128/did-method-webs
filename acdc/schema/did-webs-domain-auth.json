{
    "$id": Schema SAID,
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "did:webs Domain Authorization Credential",
    "description": "An Authorization Credential issued by a did:webs controller AID, to authorize a domain to host the did:webs DID document",
    "type": "object",
    "credentialType": "DIDWebsDomainAuthorizationCredential",
    "version": "1.0.0",
    "properties": {
        "v": {
            "description": "Version",
            "type": "string"
        },
        "d": {
            "description": "Credential SAID",
            "type": "string"
        },
        "u": {
            "description": "One time use nonce",
            "type": "string"
        },
        "i": {
            "description": "Controller AID",
            "type": "string"
        },
        "ri": {
            "description": "Credential status registry",
            "type": "string"
        },
        "s": {
            "description": "Schema SAID",
            "type": "string"
        },
        "a": {
            "oneOf": [
                {
                    "description": "Attributes block SAID",
                    "type": "string"
                },
                {
                    "$id": Block Said,
                    "description": "Attributes block",
                    "type": "object",
                    "properties": {
                        "d": {
                            "description": "Attributes block SAID",
                            "type": "string"
                        },
                        "i": {
                            "description": "Authorized Domain",
                            "type": "string"
                        },
                        "dt": {
                            "description": "Authorization date time",
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "i",
                        "dt",
                        "AID"
                    ]
                }
            ]
        },
        "r": {
            "oneOf": [
                {
                    "description": "Rules block SAID",
                    "type": "string"
                },
                {
                    "$id": SAID of rules block,
                    "description": "Rules block",
                    "type": "object",
                    "properties": {
                        "d": {
                            "description": "Rules block SAID",
                            "type": "string"
                        },
                        "usageDisclaimer": {
                            "description": "Usage Disclaimer",
                            "type": "object",
                            "properties": {
                                "l": {
                                    "description": "Associated legal language",
                                    "type": "string",
                                    "const": "This credentials makes no assertion about the controller of the domain. It only asserts that the controller of this AID authorizes a Decentralized Identifier (DID) that is also controlled by this AID to be created and published to the domain."
                                }
                            }
                        },
                        "issuanceDisclaimer": {
                            "description": "Issuance Disclaimer",
                            "type": "object",
                            "properties": {
                                "l": {
                                    "description": "Associated legal language",
                                    "type": "string",
                                    "const": "All information in a valid and non-revoked Domain Authorization Credential is accurate as of the date specified."
                                }
                            }
                        },
                        "privacyDisclaimer": {
                            "description": "Privacy Disclaimer",
                            "type": "object",
                            "properties": {
                                "l": {
                                    "description": "Associated legal language",
                                    "type": "string",
                                    "const": "When appropriate, this credential should be presented in a privacy-preserving manner using the mechanisms provided in the Issuance and Presentation Exchange (IPEX) protocol in the Authentic Chained Data Container (ACDC) specification. https://github.com/trustoverip/tswg-acdc-specification."
                                }
                            }
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "d",
                        "usageDisclaimer",
                        "issuanceDisclaimer",
                        "privacyDisclaimer"
                    ]
                }
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "i",
        "ri",
        "s",
        "d",
        "r"
    ]
}
